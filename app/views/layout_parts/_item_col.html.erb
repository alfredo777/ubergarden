<div class="col-sm-6 col-md-3">
	<div class="thumbnail">
		<% if img != nil %>
		<img src="<%= img.file.standar%>" alt="img.file">
		<%else%>
		<img src="data:image/svg+xml;base64," alt="">
		<%end%>
		<div class="caption">
			<div class="col-md-9">
				<h3><%= title %></h3>
			</div>
			<div class="col-md-3">
				<a href="#" class="btn btn-info " role="button"><i class="fa fa-pagelines" aria-hidden="true"></i></a>
			</div>
			<div class="col-lg-12 justify">
			<p><%= descript.truncate(100, separator: '...') %></p>
			</div>
			<div class="col-lg-12">
			<h4 style="text-align: right;">Precio: $<%=price%> MXN</h4>
			</div>
			<br/><br/>
			<div class="btn-group btn-group-justified">
			    
				<a href="#" class="btn btn-warning btn-small " role="button">Agregar <i class="fa fa-cart-plus" aria-hidden="true"></i></a>
				<%= link_to item_path(product.id), class: "btn btn-success btn-small " do -%>		
				 Detalles <i class="fa fa-list" aria-hidden="true"></i>
				<%end%>		
			</div>
		</div>
	</div>
</div>