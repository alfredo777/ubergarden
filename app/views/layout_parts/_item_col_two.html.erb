<div class="col-sm-2 col-md-2" >
	<div class="thumbnail"  style="height: auto !important; background: #fff; padding: 0px;">
		<div class="img-border">
			<%= link_to item_path(product.id) do -%>
			<% if img != nil %>
			<% unless mobile_device? %>
			<img src="<%= img.file.standar%>" alt="img.file" width="100%">
			<%else%>
			<img src="<%= img.file.big%>" alt="img.file" width="100%">
			<%end%>
			<%else%>
			<img src="data:image/svg+xml;base64," alt="">
			<%end%>
			<%end%>
		</div>
		<div class="p-description">
			<div class="caption">
				
				<% if mobile_device? %>
				<h4><%= title.truncate(60, separator: '...') %> <% if !product.oferta.nil?%>  <i style="color:red;"></i> <%end%> </h4>
				<%else%>
				<div class="col-md-12"  style="height: 50px;">
					<h4><%= title.truncate(20, separator: '...') %></h4>
				</div>
				<%end%>
				<!--<div class="col-md-3">
								<a href="#" class="btn btn-info " role="button"><i class="fa fa-pagelines" aria-hidden="true"></i></a>
				</div>-->
				<div class="col-lg-12">
					<% if product.oferta.nil? %>
					<b style="text-align: right; font-size: 11px;"> $<%=product.precio_final%> MXN</b>
					<%else%>
					<b style="font-size: 11px;">
					<strike style="color: red; ">$<%=price.round()%></strike> / $<%= product.precio_final %> MXN
					</b>
					<%end%>
				</div>
				<div class="btn-group btn-group-justified">
					<%= link_to actualizar_carrito_path(product: product.id, price: product.precio_final, color: product.color1, cantidad: 1), class: "btn btn-warning btn-small ", remote: true do %>
					<i class="fa fa-cart-plus" aria-hidden="true"></i>
					<%end%>
					<%= link_to item_path(product.id), class: "btn btn-success btn-small " do -%>
					<i class="fa fa-list" aria-hidden="true"></i>
					<%end%>
				</div>
			</div>
		</div>
	</div>
</div>