<!DOCTYPE html>
<html>
	<head>
		<title>Ur Garden | La primera tienda online especializada en jardinería en Latinoamérica</title>
		<%= csrf_meta_tags %>
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<%= favicon_link_tag 'favicon.png', type: 'image/png' %>

	</head>
	<div id="blur" style="display: none;">
		<center>
		<i class="fa fa-refresh fa-spin" style="font-size:24px"></i><br/>
		<div id="blur-msg"></div>
		</center>
	</div>
	<div class="blur-load"  style="display: none;">
	</div>
	<body style="background: #fff;">
		<%= render partial: '/layout_parts/head_menu' %>
		<%= yield %>
	</body>
    <%= render partial: '/layout_parts/footer' %>
</html>

<script>
	var wh = $(window).height();
		var wh2 = wh/2;
	$('.blur-load').height(wh);
	$('#blur').css({'margin-top': wh2 + 'px'});
    $(document).ajaxStart(function() {
	    $('#blur-msg').html('<h4>Procesando ...</h4>');
		$('.blur-load').show();
		$('#blur').show();
	});
	$(document).ajaxComplete(function() {
		setTimeout(function(){
	        $('.blur-load').hide();
		    $('#blur').hide();
		},2300);
	});
</script>