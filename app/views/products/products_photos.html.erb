<h1>Imagenes - <%=@product.nombre %></h1>
<div class="col-lg-12">
	<div class="row">
		<div class="col-md-5 panel panel-default" style="padding: 20px; background: #f1f1f1;">
			<%= form_tag add_photos_path(@product), multipart: true, id: 'images-product' do -%>
			
			<div class="col-md-9">
				<%= file_field_tag 'file[]', multiple: true %>
			</div>
			<div class="col-md-2">
				<button type="submit" class="btn btn-info">
				<i class="fa fa-upload" aria-hidden="true"></i>
				</button>
			</div>
			
			<%end%>
		</div>
		<div class="col-md-7">
			<div class="btn-group pull-right">
			 <%= link_to @product, class: "btn btn-success",  "data-toggle": "tooltip", "data-placement": "top", "title": "Ver datos del producto"  do %>
	              <i class="fa fa-folder-open" aria-hidden="true"></i>
	         <%end%>
	         <%= link_to edit_product_path(@product), class: "btn btn-info",  "data-toggle": "tooltip", "data-placement": "top", "title": "Editar producto" do %>
                 <i class="fa fa-pencil" aria-hidden="true"></i>
             <%end%>
             <%= link_to gallery_path(@product), class: "btn btn-default",  "data-toggle": "tooltip", "data-placement": "top", "title": "Imagenes del producto" do %>
	             <i class="fa fa-camera-retro" aria-hidden="true"></i>
	        <%end%>
	         <% if @product.publicado %>
	        <%= link_to active_inactive_path(id: @product.id), class: 'btn btn-success btn-small',  "data-toggle": "tooltip", "data-placement": "top", "title": "Cambiar estado de activación del producto" do %>
	        <i class="fa fa-toggle-on" aria-hidden="true"></i>
	        <%end%>
	        <%else%>
	        <%= link_to active_inactive_path(id: @product.id), class: 'btn btn-warning btn-small',  "data-toggle": "tooltip", "data-placement": "top", "title": "Cambiar estado de activación del producto"  do %>
	        <i class="fa fa-toggle-off" aria-hidden="true"></i>
	        <%end%>
	        <%end%>
	        <%= link_to  @product, method: :delete, data: { confirm: '¿Estas segur@ de eliminar el producto?' }, class: "btn btn-danger",  "data-toggle": "tooltip", "data-placement": "top", "title": "Eliminar producto"  do %>
       			 <i class="fa fa-trash-o" aria-hidden="true"></i>
        	<%end%>
        </div>
		</div>
	</div>
	<div class="row">
		<% @product.image_products.each do |img| %>
		<div class="col-xs-6 col-md-3">
			<div class="thumbnail">
				<img src="<%= img.file.big%>" alt="img.file">
				<div class="caption">
					<%= link_to "Borrar Imagen", destroy_photos_path(id: img.id), class: "btn btn-warning btn-large", data: { confirm: '¿Estas segur@ de eliminar esta fotografía?' }%>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>
<script type="text/javascript">
$('#images-product').submit(function(e){
var url = $('#images-product').attr('action');
var formData = new FormData($('#images-product')[0]);
$.ajax({
type: "POST",
url: url,
data: formData,
enctype: 'multipart/form-data',
processData: false,
contentType: false,
cache: false,
success: function(data)
{
alert('Se ha agregado correctamente el producto');
window.location.reload();
}
});
e.preventDefault()
});
</script>