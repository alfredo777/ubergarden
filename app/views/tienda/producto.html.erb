<div class="col-lg-12">
	<div class="p-head">
		<h1><%= @product.nombre %></h1>
		<h4><i><%= @product.nombre_cientifico %></i></h4>
		<input type="hidden" class="rating" id="rating"/>
		<script>
		$('#rating').rating();
		</script>
	</div>
	<div class="col-lg-4">
		<% @product.image_products.each_with_index do |img, index| %>
		<% if index == 0 %>
		<div class="col-lg-12">
			<div id="open">
				<img src="<%= img.file.big%>" alt="img.file" width="100%" id="openx" >
			</div>
		</div>
		<%end%>
		<% end %>
		<div class="col-lg-12" style="margin-top: 10px;">
			<% @product.image_products.each_with_index do |img, index| %>
			<div class="p-image">
				<a id="imagen-<%= index %>" onclick="altavista('imagen-<%= index %>')" data-image="<%= img.file.big%>" data-index='<%= index %>' data-target="openx" style="width: 100%;">
					<img src="<%= img.file.standar%>" alt="img.file" width="100%">
				</a>
			</div>
			<%end%>
		</div>

		<table class="table table-bordered">
			<caption>Necesidades</caption>
			<thead>
				<tr>
					<th>Luz</th>
					<th>Riego</th>
					<th>Tamaño</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= @product.luz %></td>
					<td><%= @product.riego %></td>
					<td><%= @product.tamano %></td>
				</tr>
			</tbody>
		</table>

		<table class="table table-bordered">
			<caption>Datos Geográficos</caption>
			<thead>
				<tr>
					<th>Pais</th>
					<th>Región climática</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= @product.pais_de_procedencia %></td>
					<td><%= @product.region_climatica %></td>
				</tr>
			</tbody>
		</table>

		<table class="table table-bordered">
			<caption>Datos Científicos</caption>
			<thead>
				<tr>
					<th>Familia</th>
					<th>Orden</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= @product.familia %></td>
					<td><%= @product.orden %></td>
				</tr>
			</tbody>
		</table>
		
	</div>
	<div class="col-lg-4 p-descript justify">
		<ul class="nav nav-tabs" role="tablist">
			<li role="presentation" class="active"><a href="#descript" aria-controls="descript" role="tab" data-toggle="tab"><b>Descripcción:</b></a></li>
			<li role="presentation"><a href="#needs" aria-controls="needs" role="tab" data-toggle="tab">Necesidades</a></li>			
		</ul>
		
		<div class="tab-content">
			<div role="tabpanel" class="tab-pane active" id="descript"><p><%= @product.descripccion %></p></div>
			<div role="tabpanel" class="tab-pane" id="needs"><p><%= @product.necesidades %></p></div>

		</div>
	</div>
	<div class="col-lg-4">
		<h3 style="color:#ea2840;"><b>$ <%= @product.precio %> MXN </b></h3><br/><br/>
		<i>Opcciones</i><br/>
		    <% if @product.color1 != nil %>
			<div class="btn btn-single btn-small" style="margin-top:10px;">
				<%= @product.color1 %>
			</div>
			<%end%>
			<% if @product.color1 != nil %>
			<div class="btn btn-single btn-small" style="margin-top:10px;">
				<%= @product.color2 %>
			</div>
			<%end%>
			<% if @product.color1 != nil %>
			<div class="btn btn-single btn-small" style="margin-top:10px;">
				<%= @product.color3 %>
			</div>
			<%end%>
			<% if @product.color1 != nil %>
			<div class="btn btn-single btn-small" style="margin-top:10px;">
				<%= @product.color4 %>
			</div>
			<%end%>
			<% if @product.color1 != nil %>
			<div class="btn btn-single btn-small" style="margin-top:10px;">
				<%= @product.color5 %>
			</div>
			<%end%>
		<br/><br/>
		<i>¡Estas listo!</i><br/>
		<div class="btn btn-buy">
			Comprar ahora
		</div>
	</div>
</div>
<script>
	function altavista(id){
		var altavista = $('#'+id)
			var target =  altavista.attr('data-target');
			console.log(target);
			var image  =  altavista.attr('data-image');
			console.log(image);
	$('#'+target).attr('src', image)
			
	}
</script>